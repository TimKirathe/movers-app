{{#partial "content"}}
    <h1>Add a new Squad:</h1>

    <form action="/squads/new" method="post">
        <div class="form-group">
            <label for="squad">Name of Squad</label>
            <input id="squad" name="squad" type="text" class="form-control"  placeholder="Enter Squad Name Here...">
        </div>

        <div class="form-group">
            <label for="cause">Cause</label>
            <input id="cause" name="cause" type="text" class="form-control" placeholder="Enter Cause Here...">
        </div>

        <button type="submit" class="btn btn-primary">Add Squad</button>
    </form>

{{/partial}}

{{> layout.hbs}}
